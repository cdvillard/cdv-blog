---
import Author from './Author.astro';
export interface Props {
	title: string;
	author: string;
	authorLink: string;
	publishDate: string;
	heroImage: string;
	alt: string;
}

const { title, author, authorLink, publishDate, heroImage, alt } = Astro.props;
---

<div class="layout">
	<article class="content">
		<div>
			<header>
				{heroImage && heroImage}
				<p class="publish-date">{publishDate}</p>
				<h1 class="title">{title}</h1>
			</header>
			<main>
				<slot />
			</main>
		</div>
	</article>
</div>

<style>
	.hero-image {
		width: 100%;
		object-fit: cover;
		object-position: bottom;
		margin-top: 2rem;
		margin-bottom: 4rem;
		max-width: 1280px;
	}

	@media (max-width: 50em) {
		.hero-image {
			height: 260px;
			margin-top: 0;
			margin-bottom: 2rem;
		}
	}

	.content {
		margin-bottom: 8rem;
	}

</style>
