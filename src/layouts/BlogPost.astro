---
import * as prismicH from "@prismicio/helpers";
import Base from '../layouts/Base.astro';
import BlogPost from '../components/BlogPost.astro';

const { blogPost } = Astro.props;

console.log('blogPost @ BlogPost.astro', blogPost)

const { data, url } = blogPost;
const { title, description, date, featuredimage } = data;
---

<Base
	title={prismicH.asText(title)}
	description={prismicH.asText(description)}
	permalink={`https://charlesvillard.co${url}`}
	featuredimage={featuredimage.url}
>
	<BlogPost
		title={title}
		publishDate={date}
		heroImage={featuredimage}
		author="Charles Villard"
		authorLink="https://twitter.com/cdvillard"
	>
		<slot />
	</BlogPost>
</Base>
