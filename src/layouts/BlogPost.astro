---
import Base from '../layouts/Base.astro';
import BlogPost from '../components/BlogPost.astro';

interface BlogContent {
	description: string;
	featuredImage: string;
	featuredImageAlt: string;
	title: string;
	pubDate: string;
	updatedDate?: string;
	rssOnly?: boolean;
	draft?: boolean;
}
export interface Props {
	url: string;
	content: BlogContent
}

const {
	content: { title, description, featuredImage, featuredImageAlt, pubDate, updatedDate, rssOnly},
	url,
} = Astro.props;
---

<Base
	title={title}
	description={description}
	permalink={`https://charlesvillard.co/blog/${url}`}
	featuredimage={featuredImage}
>
	<BlogPost
		title={title}
		publishDate={pubDate}
		author="Charles Villard"
		authorLink="https://twitter.com/cdvillard"
		featuredImage={featuredImage}
		featuredImageAlt={featuredImageAlt}
	>
		<slot />
	</BlogPost>
</Base>
