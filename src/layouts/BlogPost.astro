---
import * as prismicH from "@prismicio/helpers";
import Base from '../layouts/Base.astro';
import BlogPost from '../components/BlogPost.astro';
export interface Props {
	url: string;
	content: {
		description: string;
		featuredImage: string;
		title: string;
		pubDate: string;
		updatedDate?: string;
		rssOnly?: boolean;
		draft?: boolean;
	}
}

const {
	content: { title, description, featuredImage, pubDate, updatedDate, rssOnly},
	url,
	compiledContent
} = Astro.props;
---

<Base
	title={title}
	description={description}
	permalink={`https://charlesvillard.co${url}`}
	featuredimage={featuredImage}
>
	<BlogPost
		title={title}
		publishDate={pubDate}
		author="Charles Villard"
		authorLink="https://twitter.com/cdvillard"
	>
		<slot />
	</BlogPost>
</Base>
